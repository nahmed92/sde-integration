{
  "formatter": {
    "js": {
      "indent_size": 2,
      "indent_char": " "
    }
  },
  "jshint": {
    "options": {
      "node": true,
      "browser": true,
      "esnext": true,
      "bitwise": true,
      "camelcase": true,
      "curly": true,
      "eqeqeq": true,
      "immed": true,
      "indent": 2,
      "latedef": true,
      "newcap": true,
      "noarg": true,
      "quotmark": "single",
      "regexp": true,
      "undef": true,
      "unused": true,
      "strict": true,
      "trailing": true,
      "smarttabs": true,
      "white": false,
    },
    "global": {
      "angular": false
    }
  },
  "editor": {
    "expandtab": true,
    "tabsize": 2
  },
  "application": {
    "webroot": "app"
  }
}